<?xml version="1.0"?>
<ROOT>
	<!-- macros -->
	<MACROS>
		<MACRO NAME="lpm_pipeline_is_zero"  DEFINITION="LPM_PIPELINE == 0" />
		<MACRO NAME="a_max_range_width" DEFINITION="LPM_WIDTHA gt 32 ? 32 : LPM_WIDTHA" />
		<MACRO NAME="a_range_width" DEFINITION="(2 exp (a_max_range_width - 1)) - 1" />
		<MACRO NAME="b_max_range_width" DEFINITION="LPM_WIDTHB gt 32 ? 32 : LPM_WIDTHB" />
		<MACRO NAME="b_range_width" DEFINITION="(2 exp (b_max_range_width - 1)) - 1" />
	</MACROS>
	<PORT_RULES>
		<!-- ports -->
		<PORT NAME="dataa" TYPE="INPUT" WIDTH="LPM_WIDTHA" USAGE="USED" DEFAULT_VALUE="0">
			<STATE V="CONSTANT" WHEN="INPUT_A_IS_CONSTANT==YES" />
			<CONSTANT_RANGE MIN="0" MAX="a_range_width" />
			<STATE V="USED" WHEN="INPUT_A_IS_CONSTANT==NO" />
		</PORT>
		<PORT NAME="datab" TYPE="INPUT" WIDTH="LPM_WIDTHB" USAGE="USED" DEFAULT_VALUE="0">
			<STATE V="CONSTANT" WHEN="INPUT_B_IS_CONSTANT==YES" />
			<CONSTANT_RANGE MIN="0" MAX="b_range_width" />
			<STATE V="USED" WHEN="INPUT_B_IS_CONSTANT==NO" />
		</PORT>
		<PORT NAME="sum" TYPE="INPUT" WIDTH="LPM_WIDTHS" USAGE="VARIABLE" DEFAULT_VALUE="0">
			<STATE V="UNUSED" WHEN="INPUT_A_IS_CONSTANT==YES || INPUT_B_IS_CONSTANT==YES || USE_WIZARD == ON"  />
			<STATE V="UNUSED" WHEN="LPM_WIDTHA lt 5 || LPM_WIDTHB lt 5 || USE_AHDL_IMPLEMENTATION == ON"  />
		</PORT>

		<!-- pipeline port -->
		<PORT NAME="clock" TYPE="INPUT" DEFAULT_VALUE="0" IS_CLOCK_PORT="TRUE" CLOCK_PERIOD="10" USAGE="VARIABLE">
			<STATE V="UNUSED" WHEN="lpm_pipeline_is_zero"/>
			<STATE V="USED" WHEN="!lpm_pipeline_is_zero" />
		</PORT>
		<PORT NAME="aclr" TYPE="INPUT" HIGH_PROBABILITY="10" USAGE="VARIABLE">
			<STATE V="UNUSED" WHEN="lpm_pipeline_is_zero"/>
		</PORT>
		<PORT NAME="clken" TYPE="INPUT" HIGH_PROBABILITY="90" USAGE="VARIABLE">
			<STATE V="UNUSED" WHEN="lpm_pipeline_is_zero"/>
		</PORT>
	</PORT_RULES>

	<!-- parameters -->
	<PARAMETER_RULES>
		<PARAMETER NAME="LPM_WIDTHA" TYPE="INTEGER" />
		<PARAMETER NAME="LPM_WIDTHB" TYPE="INTEGER" />
		<PARAMETER NAME="LPM_REPRESENTATION">
			<FORCE_VALUE TO="SIGNED|UNSIGNED"/>
		</PARAMETER>
		<PARAMETER NAME="INPUT_A_IS_CONSTANT" >
			<FORCE_RANGE TO="YES|NO" />
			<FORCE_RANGE TO="NO" WHEN="INPUT_B_IS_CONSTANT==YES || USE_WIZARD == ON"/>
		</PARAMETER>
		<PARAMETER NAME="INPUT_B_IS_CONSTANT" >
			<FORCE_RANGE TO="YES|NO" />
		</PARAMETER>
		<PARAMETER NAME="LPM_PIPELINE" TYPE="INTEGER" />
		<PARAMETER NAME="LATENCY" TYPE="INTEGER" VALUE="UNUSED"/>
		<PARAMETER NAME="DEDICATED_MULTIPLIER_CIRCUITRY" TYPE="STRING" VALUE="AUTO|YES|NO|FIRM" DEFAULT_VALUE_INDEX="0" LPM_HINT="ON" >
			<FORCE_VALUE TO="AUTO|YES|NO" WHEN="INPUT_A_IS_CONSTANT==YES || INPUT_B_IS_CONSTANT==YES" />
		</PARAMETER>
		<PARAMETER NAME="LPM_WIDTHS" TYPE="INTEGER" />
	</PARAMETER_RULES>
</ROOT>
