<?xml version="1.0"?>
<ROOT>
	<MACROS>
		<MACRO NAME="lpm_pipeline_is_zero"  DEFINITION="PIPELINE == 0" />
	</MACROS>
	<PORTS>
		<PORT NAME="aclr" TYPE="INPUT" HIGH_PROBABILITY="10" USAGE="VARIABLE">
			<STATE V="UNUSED" WHEN="lpm_pipeline_is_zero"/>
			<STATE V="USED" WHEN="!lpm_pipeline_is_zero"/>
		</PORT>
		<PORT NAME="clock" TYPE="INPUT" DEFAULT_VALUE="1" IS_CLOCK_PORT="TRUE" CLOCK_PERIOD="10" USAGE="VARIABLE">
			<STATE V="UNUSED" WHEN="lpm_pipeline_is_zero" />
			<STATE V="USED" WHEN="!lpm_pipeline_is_zero" />
		</PORT>
		<PORT NAME="ena" TYPE="INPUT" HIGH_PROBABILITY="90" USAGE="VARIABLE">
			<STATE V="UNUSED" WHEN="lpm_pipeline_is_zero"/>
			<STATE V="USED" WHEN="!lpm_pipeline_is_zero"/>
		</PORT>
	</PORTS>
	<PARAMETER_RULES>
		<PARAMETER NAME="RESULT_ALIGNMENT" TYPE="STRING">
			<FORCE_RANGE TO="MSB|LSB"/>
		</PARAMETER>
		<PARAMETER NAME="PIPELINE" TYPE="INTEGER">
			<FORCE_RANGE MIN="0" MAX="4"/>
		</PARAMETER>
		<PARAMETER NAME="DATA_WIDTH" TYPE="INTEGER" VALUE="1-8">
			<FORCE_RANGE MIN="1" MAX="8"/>
		</PARAMETER>
		<PARAMETER NAME="RESULT_WIDTH" TYPE="INTEGER" VALUE="1">
			<FORCE_RANGE MIN="1" MAX="2 * DATA_WIDTH"/>
		</PARAMETER>
	</PARAMETER_RULES>
</ROOT>
