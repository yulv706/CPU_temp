<?xml version="1.0"?>
<ROOT>
	<PARAMETERS>		
		<PARAMETER NAME="WIDTH_EXP" DEFAULT_VALUE="8" >
			<FORCE_RANGE MIN="8" MAX="31" />
			<VALUE_RULE>
				(WIDTH_EXP != 9) and (WIDTH_EXP != 10)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_MAN" DEFAULT_VALUE="23" >
			<FORCE_VALUE TO="23" WHEN="(WIDTH_EXP == 8)" />
			<FORCE_RANGE MIN="31" MAX="52" WHEN="(WIDTH_EXP gt 10)" />
			<VALUE_RULE>
				((WIDTH_EXP + WIDTH_MAN) lt 64)
			</VALUE_RULE>
			<VALUE_RULE>
				(WIDTH_EXP lt WIDTH_MAN)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="PIPELINE" >
			<FORCE_RANGE TO="6|33" WHEN="(WIDTH_EXP == 8) and (WIDTH_MAN == 23)" />
    		<FORCE_RANGE TO="10|61" WHEN="(WIDTH_EXP == 11) and (WIDTH_MAN == 52)" />
    		<FORCE_RANGE TO="8|(WIDTH_MAN+10)" WHEN="(WIDTH_MAN gt 30) and (WIDTH_MAN lte 41)" />
    		<FORCE_RANGE TO="10|(WIDTH_MAN+10)" WHEN="(WIDTH_MAN gt 41) and ((WIDTH_MAN lte 52) and (WIDTH_EXP != 11))" />
		</PARAMETER>
		<PARAMETER NAME="OPTIMIZE" VALUE="SPEED|AREA" DEFAULT_VALUE_INDEX="0" />			
	</PARAMETERS>
	<PORTS>
		<PORT NAME="nan" TYPE="OUTPUT" USAGE="VARIABLE" />
		<PORT NAME="overflow" TYPE="OUTPUT" USAGE="VARIABLE" />
		<PORT NAME="division_by_zero" TYPE="OUTPUT" USAGE="VARIABLE" />
		<PORT NAME="zero" TYPE="OUTPUT" USAGE="VARIABLE" />
		<PORT NAME="underflow" TYPE="OUTPUT" USAGE="VARIABLE" />
		<PORT NAME="indefinite" TYPE="OUTPUT" USAGE="UNUSED" />
		<PORT NAME="denormal" TYPE="OUTPUT" USAGE="UNUSED" />

		<!-- pipeline port -->
		<PORT NAME="aclr" TYPE="INPUT" USAGE="VARIABLE" DEFAULT_VALUE="0" />
		<PORT NAME="clk_en" TYPE="INPUT" USAGE="VARIABLE" DEFAULT_VALUE="1" />
	</PORTS>
</ROOT>
