<?xml version="1.0"?>
<ROOT>
	<PARAMETERS>
		<PARAMETER NAME="BLOCKS" VALUE="2-48" DEFAULT_VALUE="2" >
			<VALUE_RULE>
				((BLOCKS % 2) == 0)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="VECTORSIZE" VALUE="8-128" DEFAULT_VALUE="8" >
			<VALUE_RULE>
				(VECTORSIZE ==  8) or (VECTORSIZE ==  16) or 
				(VECTORSIZE == 32) or (VECTORSIZE ==  64) or 
				(VECTORSIZE == 96) or (VECTORSIZE == 128)
			</VALUE_RULE>
		</PARAMETER>
		<PARAMETER NAME="WIDTH_EXP" DEFAULT_VALUE="8" >
			<FORCE_VALUE TO="8" />
		</PARAMETER>
		<PARAMETER NAME="WIDTH_MAN" DEFAULT_VALUE="23" >
			<FORCE_VALUE TO="23" />
		</PARAMETER>
	</PARAMETERS>
	<PORTS>
		<PORT NAME="reset" TYPE="INPUT" USAGE="VARIABLE" DEFAULT_VALUE="0" />
		<PORT NAME="enable" TYPE="INPUT" USAGE="VARIABLE" DEFAULT_VALUE="1" />
	</PORTS>
</ROOT>
