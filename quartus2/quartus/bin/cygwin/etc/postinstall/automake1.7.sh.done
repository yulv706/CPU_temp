#!/bin/sh
prefix=/usr
bindir=${prefix}/bin
sbindir=${prefix}/sbin

${sbindir}/update-alternatives \
	--install ${bindir}/automake automake ${bindir}/automake-1.7 30 \
	--slave   ${bindir}/aclocal  aclocal  ${bindir}/aclocal-1.7

/usr/bin/install-info --dir-file=/usr/share/info/dir --info-file=/usr/share/info/automake1.7.info.gz


