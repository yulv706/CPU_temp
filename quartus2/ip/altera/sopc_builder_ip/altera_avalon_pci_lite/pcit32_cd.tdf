	rstn			: INPUT;	-- PCI Reset
	ena				: INPUT;	-- Clock Enable
--	dat[5..0]		: INPUT = GND;	-- Data Input
	adr[7..0]		: INPUT = GND;
	
--	dec0R			: OUTPUT;	-- Data = B"000000"	-- 00H	Dev ID
