--	dec9R			: OUTPUT;	-- Data = B"001001"	-- 24H	BAR5
--	dec10R			: OUTPUT; 	-- Data = B"001010"	-- 28H	CIS	
-- 	dec11R			: OUTPUT;	-- Data = B"001011" -- 2CH	SUBS
--	dec12R			: OUTPUT;	-- Data = B"001100"	-- 30H	EXP ROM
